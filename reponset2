        <p class="text-xl mb-4" id="scoreMessage"></p>
        <button onclick="restartQuiz()" class="bg-blue-600 hover:bg-blue-500 text-white px-6 py-2 rounded">Recommencer</button>
    </main>

    <script>
        let score = localStorage.getItem("score") || 0;
        document.getElementById("scoreMessage").textContent = `Votre score est : ${score}/3`;
        function restartQuiz() {
            localStorage.clear();
            window.location.href = "../index.html";
        }
    </script>
